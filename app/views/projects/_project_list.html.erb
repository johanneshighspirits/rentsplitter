<ol>
  <% @projects.each do |project| %>
  <li>
    <p><b><%= project.name %></b></p>
    <%= link_to "Open", project %><br>
    <% if is_admin_for_project? project %>
      <%= link_to "Send invoices", "/projects/#{project.id}/send_invoices", method: :post %><br>
      <%= link_to "Delete", project, method: :delete,
                                  data: { confirm: "Are you sure? This will delete '#{project.name}' and all data will be lost." } %><br>
    <% end %>
    Members:
    <ul>
    <% project.members.each do |member| %>
      <li><i><%= member.name %></i></li>
    <% end %>
    </ul>
  </li>
  <% end %>
</ol>
