<%= react_component 'Calendar',
  bookings: @calendar_events,
  monthNames: (0..11).map {|m| Date::MONTHNAMES[m]},
  dayNames: (0..6).map {|m| Date::DAYNAMES[m]},
  displayDate: {
    year: Date.current.year,
    month: {
      # Zero based, January = 0
      nr: Date.current.month - 1,
      name: Date::MONTHNAMES[Date.current.month - 1]
    },
    day: {
      nr: Date.current.day,
      name: Date::DAYNAMES[Date.current.wday]
    }
  }
    
%>

