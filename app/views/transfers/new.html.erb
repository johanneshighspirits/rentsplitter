<%= react_component 'Form', 
authenticity_token: form_authenticity_token, 
action: transfers_path,
fields: [
  {
    fieldType: "text",
    attribute: "transfer[transferred_at]",
    attributeName: "Transfer date",
    defaultValue: Date.current.to_date
  },
  {
    fieldType: "text",
    attribute: "transfer[message]",
    attributeName: "Message",
    defaultValue: ""
  },
  {
    fieldType: "number",
    attribute: "transfer[amount]",
    attributeName: "Amount",
    defaultValue: ""
  },
  {
    fieldType: "select",
    attribute: "member_id",
    attributeName: "Which member made the transfer",
    options: @members.map {|m| [m.id, m.name]},
  },
  {
    fieldType: "select",
    attribute: "project_id",
    attributeName: "Select a project to add the transfer to",
    options: [],
  },
  {
    fieldType: "submit",
    objectName: "commit",
    attribute: "",
    attributeName: "",
    defaultValue: "Add transfer"
  }
] %>
