<section>
  <article class="info bright">
    <h2><%= flash[:success] %></h2>
    <p>Please choose a password for your account.</p>
<%=
react_component 'Form', 
authenticity_token: form_authenticity_token, 
action: member_path(@member),
method: "patch",
title: "Choose a new password",
fields: [
  {
    fieldType: "password",
    attribute: "member[password]",
    attributeName: "Password",
    validations: [
      {
        type: "presence",
        message: "Please enter a password."
      }
    ],
    autofocus: true
  },
  {
    fieldType: "password",
    attribute: "member[password_confirmation]",
    attributeName: "Confirm password",
    validations: [
      {
        type: "presence",
        message: "Enter your password again."
      }
    ],
  },
  {
    fieldType: "submit",
    attributeName: "Choose password"
  }
] %>
  </article>
</section>
