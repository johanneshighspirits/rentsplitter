<img id="moon" style="position:absolute;opacity:0" width="100" height="100" src=<%= asset_path("MoonIcon.svg") %> />
<img id="sun" style="position:absolute;opacity:0" width="100" height="100" src=<%= asset_path("SunIcon.svg") %> />
<%= react_component 'Calendar',
  authenticity_token: form_authenticity_token,
  currentMember: {
      name: current_member.name,
      id: current_member.id
    },
  projectId: @project_id,
  members: @members.map {|m| {name: m.name, id: m.id}},
  bookings: @calendar_events,
  monthNames: (0..11).map {|m| Date::MONTHNAMES[m]},
  dayNames: (0..6).map {|m| Date::DAYNAMES[m]},
  displayDate: {
    year: Date.current.year,
    month: {
      # Zero based, January = 0
      nr: Date.current.month - 1,
      name: Date::MONTHNAMES[Date.current.month - 1]
    },
    day: {
      nr: Date.current.day,
      name: Date::DAYNAMES[Date.current.wday]
    }
  }
    
%>


