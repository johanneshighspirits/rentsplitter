  },
  members: @members.map {|m| {name: m.name, email: m.email, id: m.id}},
  bookings: @calendar_events,
  monthNames: (0..12).map {|m| Date::MONTHNAMES[m]},
  dayNames: (0..6).map {|m| Date::DAYNAMES[m]},
  displayDate: Date.current    
%>


