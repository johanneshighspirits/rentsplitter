<% # provide :page_title, "Reset password" %>
<%= react_component 'Form', 
authenticity_token: form_authenticity_token, 
title: "Reset password",
action: password_reset_path(params[:id]),
formErrorHeading: flash[:danger],
method: "patch",
fields: [
  {
    fieldType: "hidden",
    attribute: "email",
    defaultValue: @member.email
  },
  {
    fieldType: "password",
    attribute: "member[password]",
    attributeName: "New password",
    validations: [
      {
        type: "presence",
        message: "Please enter a password."
      },
      {
        type: "length>",
        limit: 6,
        message: "Password must contain more than 6 characters."
      }
    ],
    autofocus: true
  },
  {
    fieldType: "password",
    attribute: "member[password_confirmation]",
    attributeName: "Confirm password",
    validations: [
      {
        type: "presence",
        message: "Enter your password again."
      }
    ],
  },
  {
    fieldType: "submit",
    attributeName: "Update password"
  }
],
flash: flash
 %>