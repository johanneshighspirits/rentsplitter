<% # provide :page_title, "Forgot password" %>
<%= react_component 'Form', 
authenticity_token: form_authenticity_token, 
title: "Forgot password",
action: password_resets_path,
formErrorHeading: flash[:danger],
fields: [
  {
    fieldType: "email",
    attribute: "password_reset[email]",
    attributeName: "Email",
    autofocus: true,
    validations: [
      {
        type: "email",
        message: "Enter a valid email address."
      }
    ]
  },
  {
    fieldType: "submit",
    attributeName: "Reset password"
  }
],
flash: flash
%>
